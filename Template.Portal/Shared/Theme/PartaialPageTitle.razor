<PageTitle>@Title</PageTitle>

<div class="row mb-4">
    <div class="col-sm-4">
        <h1 class="m-0">@Header</h1>
    </div>
    <div class="col-sm-8">
        @Content
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Page Title";
    [Parameter] public string Header { get; set; } = "Page Header";    
    [Parameter] public RenderFragment? Content { get; set; }
}
